<%= form_with(model: @tuit, url: "/actualizar", method: :patch) do |form| %>
  <div class="tweet-form">
    <div class="card">
      <div class="card-body">
        <div class="form-group">
          <%= form.text_area :description, class: "form-control", placeholder: "Escribe tu tweet" %>
        </div>
        <div class="form-group py-2">
          <%= form.text_field :username, class: "form-control", placeholder: "Ingresa tu Usuario" %>
        </div>
        <%= form.submit "Enviar", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <%= form.hidden_field :id %>
<% end %>
